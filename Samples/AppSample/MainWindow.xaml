<vk:ThemeWindow
    x:Class="AppSample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vk="http://schemas.vagabond-k.com/winfx/2016/xaml"
    xmlns:local="clr-namespace:AppSample"
    mc:Ignorable="d"
    Title="{Binding SelectedPageContext.Title, StringFormat={}App Sample - {0}}" Height="450" Width="800">
    <vk:PageHostControl DataContext="{Binding SelectedPageContext}"/>
</vk:ThemeWindow>
